//terraform/security.tf
resource "aws_security_group" "cosmos_sg" {
  name        = "cosmos-sg"
  description = "Security group for Cosmos node"

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
    description = "SSH"
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
    description = "Allow all outbound traffic"
  }

  tags = {
    Name = "cosmos-sg"
  }
}
